<script>
// Hidden AI: Generate Development based on Topic, LO, Range, IC
function generateHiddenDevelopment(){
    const topic = document.getElementById("topic").value;
    const lo = document.getElementById("lo").value;
    const range = document.getElementById("range").value;
    const ic = document.getElementById("ic").value;

    document.getElementById("trainerDev").value =
`â€¢ Explains ${topic} linking with LO and indicative content
â€¢ Demonstrates key points from range and IC
â€¢ Guides learners during practice
â€¢ Corrects errors and gives feedback`;

    document.getElementById("learnerDev").value =
`â€¢ Listen and observe demonstration
â€¢ Participate in activities based on range
â€¢ Ask questions and interact with trainer
â€¢ Apply learned skills practically`;
}

// Paste logo
document.querySelectorAll(".paste-area").forEach(a=>{
    a.addEventListener("paste",e=>{
        for(let i of e.clipboardData.items){
            if(i.type.includes("image")){
                const r=new FileReader();
                r.onload=ev=>document.getElementById(a.dataset.img).src=ev.target.result;
                r.readAsDataURL(i.getAsFile());
            }
        }
        e.preventDefault();
    });
});

// Generate PDF
async function generatePDF(){
    generateHiddenDevelopment(); // auto-fill dev
    const {jsPDF} = window.jspdf;
    const el = document.getElementById("sessionPlan");
    const canvas = await html2canvas(el,{scale:2});
    const img = canvas.toDataURL("image/png");
    const pdf = new jsPDF("p","mm","a4");
    pdf.addImage(img,"PNG",0,0,210,(canvas.height*210)/canvas.width);
    pdf.save("Session_Plan.pdf");
}
</script>

