<script>
function generateActivities() {
    const lo = document.getElementById("lo").value;
    const range = document.getElementById("range").value;
    const indicative = document.getElementById("indicative").value;

    document.getElementById("t1").value =
        "Trainer explains key concepts from the indicative content related to: " + lo;
    document.getElementById("l1").value =
        "Learners listen, ask questions, and take notes on the explanation.";

    document.getElementById("t2").value =
        "Trainer demonstrates practical aspects based on range: " + range;
    document.getElementById("l2").value =
        "Learners observe the demonstration and identify main steps.";

    document.getElementById("t3").value =
        "Trainer guides learners through guided practice using indicative content.";
    document.getElementById("l3").value =
        "Learners perform guided practice under trainer supervision.";

    document.getElementById("t4").value =
        "Trainer facilitates discussion and evaluates learner understanding of LO.";
    document.getElementById("l4").value =
        "Learners discuss results, answer questions, and summarize what they learned.";
}
</script>

